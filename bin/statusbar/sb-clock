#!/bin/sh

clock=$(date '+%H')
dat=$(date '+%d %B')
case "$dat" in
	"31 October")wicon="ğŸƒ";;
	"02 December")wicon="ğŸŒ´ ";;
	"24 December")wicon="ğŸ…";;
	"25 December")wicon="ğŸ„";;
	"01 January")wicon="ğŸ†";;
	"26 January")wicon="ğŸ¦š ";;
	"17 March")wicon="â˜˜ï¸";;
	"01 July")wicon="ğŸ ";;
	"04 July")wicon="ğŸ—½ ";;
	"15 August")wicon="ğŸ¯";;
	*)wicon="ğŸ“…";;
esac

if [ $clock -ge 4 ] && [ $clock -lt 7 ]
then
	icon="ğŸŒ…"

elif [ $clock -ge 7 ] && [ $clock -lt 17 ]
then
	icon="ğŸ™"
elif [ $clock -ge 17 ] && [ $clock -lt 19 ]
then
	icon="ğŸŒ‡ "
else
	icon="ğŸŒ‰"
fi

case $BUTTON in
	1) setsid -f st -e calcurse;;
	3) notify-send "â³Date and Time Module" ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

date "+$wicon %d%b(%a)%Y $icon %H:%M"

