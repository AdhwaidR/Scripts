#!/bin/sh

case $BUTTON in
	1) setsid -f st -e pulsemixer ;;
	2) pamixer -t; pkill -RTMIN+10 dwmblocks;;
	3) notify-send "ðŸ“¢ Volume module" "\- Shows volume ðŸ”Š, ðŸ”‡ if muted.
- Middle click to mute.
- Scroll to change." ;;
	4) pamixer --allow-boost -i 5 ;;
	5) pamixer --allow-boost -d 5 ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

[ $(pamixer --get-mute) = "true" ] && echo ðŸ”‡ && exit
volume="$(pamixer --get-volume)"
if [ $volume -ge 70 ] 
then 
	icon="ðŸ”Š"                       
elif [ $volume -ge 30 ] 
then
	icon="ðŸ”‰"
elif [ $volume -gt 0 ] 
then
	icon="ðŸ”ˆ"
fi

echo "$icon $volume% "
